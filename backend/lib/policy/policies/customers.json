{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "execute-api:Invoke",
      "Resource": "arn:aws:execute-api:<region>:<account-id>:<api-id>/<stage>/customers/*",
      "Condition": {
        "StringEquals": {
          "cognito:groups": "customers"
        }
      }
    }
  ]
}